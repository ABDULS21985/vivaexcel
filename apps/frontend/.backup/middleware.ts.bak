import createMiddleware from "next-intl/middleware";
import { NextRequest, NextResponse } from "next/server";
import { locales, defaultLocale, type Locale } from "./i18n";

// Cookie name for storing user's locale preference
const LOCALE_COOKIE = "NEXT_LOCALE";

// Create the next-intl middleware
const intlMiddleware = createMiddleware({
  // List of all supported locales
  locales,
  // Default locale when no locale is detected
  defaultLocale,
  // Use URL-based locale prefix for all locales
  localePrefix: "always",
  // Detect locale from Accept-Language header
  localeDetection: true,
});

export default function middleware(request: NextRequest) {
  const { pathname } = request.nextUrl;

  // Skip middleware for static files and API routes
  if (
    pathname.startsWith("/_next") ||
    pathname.startsWith("/api") ||
    pathname.startsWith("/static") ||
    pathname.includes("/favicon") ||
    pathname.includes(".") // Skip files with extensions
  ) {
    return NextResponse.next();
  }

  // Check if user has a locale preference stored in cookie
  const cookieLocale = request.cookies.get(LOCALE_COOKIE)?.value as
    | Locale
    | undefined;

  // Run the next-intl middleware
  const response = intlMiddleware(request);

  // If the user has a cookie preference and no locale in URL, redirect to preferred locale
  if (cookieLocale && locales.includes(cookieLocale)) {
    const hasLocalePrefix = locales.some(
      (locale) =>
        pathname.startsWith(`/${locale}/`) || pathname === `/${locale}`
    );

    if (!hasLocalePrefix) {
      const url = request.nextUrl.clone();
      url.pathname = `/${cookieLocale}${pathname}`;
      return NextResponse.redirect(url);
    }
  }

  // Extract the locale from the URL for setting the cookie
  const pathnameLocale = locales.find(
    (locale) => pathname.startsWith(`/${locale}/`) || pathname === `/${locale}`
  );

  // If we found a locale in the path, update the cookie
  if (pathnameLocale && response) {
    response.cookies.set(LOCALE_COOKIE, pathnameLocale, {
      path: "/",
      maxAge: 60 * 60 * 24 * 365, // 1 year
      sameSite: "lax",
      secure: process.env.NODE_ENV === "production",
    });
  }

  return response;
}

export const config = {
  // Match all pathnames except for:
  // - API routes
  // - Static files (with extensions)
  // - _next internal routes
  matcher: ["/((?!api|_next|_vercel|.*\\..*).*)"],
};
